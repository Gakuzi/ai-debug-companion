{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/Gakuzi/ai-debug-companion/schemas/tupikRequest.schema.json",
  "title": "TupikRequest",
  "type": "object",
  "properties": {
    "description": { "type": "string", "minLength": 1 },
    "projectContext": {
      "type": "object",
      "properties": {
        "files": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "deps": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        }
      },
      "required": ["files", "deps"],
      "additionalProperties": false
    },
    "collectedData": { "type": ["object", "array", "null"] }
  },
  "required": ["description", "projectContext"],
  "additionalProperties": false
}
