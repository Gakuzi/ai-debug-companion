{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/Gakuzi/ai-debug-companion/schemas/tupikRequest.schema.json",
  "title": "TupikRequest",
  "type": "object",
  "properties": {
    "description": { 
      "type": "string", 
      "minLength": 1,
      "description": "Description of the deadlock situation"
    },
    "projectContext": {
      "type": "object",
      "properties": {
        "files": {
          "type": "array",
          "items": { 
            "type": "string", 
            "minLength": 1 
          },
          "description": "List of project files"
        },
        "deps": {
          "type": "array",
          "items": { 
            "type": "string", 
            "minLength": 1 
          },
          "description": "Project dependencies"
        },
        "integrations": {
          "type": "array",
          "items": { 
            "type": "string", 
            "minLength": 1 
          },
          "description": "Project integrations"
        }
      },
      "required": ["files", "deps", "integrations"],
      "additionalProperties": false,
      "description": "Project context information"
    },
    "collectedData": {
      "type": "object",
      "properties": {
        "projectStructure": {
          "type": "array",
          "items": { 
            "type": "string", 
            "minLength": 1 
          },
          "description": "Project structure information"
        },
        "errors": {
          "type": "array",
          "items": { 
            "type": "object" 
          },
          "description": "Collected error information"
        },
        "systems": {
          "type": "array",
          "items": { 
            "type": "object" 
          },
          "description": "System information"
        }
      },
      "additionalProperties": false,
      "description": "Collected data for analysis"
    }
  },
  "required": ["description", "projectContext"],
  "additionalProperties": false,
  "description": "Schema for tupik (deadlock) requests in AI Debug Companion"
}